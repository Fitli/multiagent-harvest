to act
  if not try-shoot [
    if-else not has-fruit [search-food] [try-eat]
  ]

  ;;if random 30 = 0 [shot]
end

to search-food
  if not search-vision
  [ search-random]
end


to search-random
  let new-heading random 3
  if new-heading = 0 []
  if new-heading = 1 [right 90]
  if new-heading = 2 [left 90]

  forward 1
end

to-report search-vision
  let dis-something false
  let cur-dist 1
  repeat eat-vision [
    if try-look cur-dist 0   [report true]
    if try-look cur-dist 90  [report true]
    if try-look cur-dist 180 [report true]
    if try-look cur-dist 270 [report true]
    set cur-dist cur-dist + 1
  ]
  report false
end

to-report try-look [dist h]
  let target patch-at-heading-and-distance h dist
  if target = nobody [report false]
  let has-food [has-fruit] of target
  if has-food [
    set heading h
    forward 1
    report true
  ]
  report false
end


to try-eat
  ifelse full-time > 0 [
    set full-time full-time - 1
  ][
    if eat-fruit [ set full-time eating-cooldown]
  ]
end

to-report count-fruit
  let x xcor
  let y ycor
  let vision eat-vision
  report count patches with [(pxcor > x - vision) and (pycor > y - vision) and (pxcor < x + vision) and (pycor < y + vision) and has-fruit]
end

to-report try-shoot
  let target search-vision-turtles
  if target = nobody [report false]
  if-else count-fruit < shoot-treshold 
  [
    create-links-with turtles-on target
    ask turtles-on target [shot]
    report true
  ]
  [report false]
  
  
end

to-report search-vision-turtles
  let dis-something nobody
  let cur-dist 1
  repeat shoot-vision [
    let target try-look-turtles cur-dist 0
    if target != nobody   [report target]
    set target try-look-turtles cur-dist 90
    if target != nobody   [report target]
    set target try-look-turtles cur-dist 180
    if target != nobody   [report target]
    set target try-look-turtles cur-dist 270
    if target != nobody   [report target]
    
    set cur-dist cur-dist + 1
  ]
  report nobody
end

to-report try-look-turtles [dist h]
  let target patch-at-heading-and-distance h dist
  if target = nobody [report nobody]
  let has-turtles any? turtles-on target
  if has-turtles [
    report target
  ]
  report nobody
end


